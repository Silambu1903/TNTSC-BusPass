<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/coloWhite</item>
        <item name="android:fontFamily">@font/google_font</item>
        <item name="android:navigationBarDividerColor">@color/colorTransparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/google_font</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?colorSurface</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent</item>
    </style>


    <style name="Canlder" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/coloWhite</item>
    </style>

    <style name="NavigationView">
        <item name="fontFamily">@font/google_font</item>
    </style>
</resources>