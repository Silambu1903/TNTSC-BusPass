<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sct_Details_constraint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewDate_sct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/colorBlack"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.02" />

            <TextView
                android:id="@+id/txt_day_sct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Mon"
                android:textColor="#808080"
                app:layout_constraintBottom_toBottomOf="@+id/textViewDate_sct"
                app:layout_constraintEnd_toStartOf="@+id/textViewDate_sct"
                app:layout_constraintTop_toTopOf="@+id/textViewDate_sct"
                app:layout_constraintVertical_bias="0.3" />

            <TextView
                android:id="@+id/txt_month_year_sct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 2020"
                android:textColor="#808080"
                app:layout_constraintBottom_toBottomOf="@+id/textViewDate_sct"
                app:layout_constraintEnd_toEndOf="@+id/txt_day_sct"
                app:layout_constraintTop_toBottomOf="@+id/txt_day_sct"
                app:layout_constraintVertical_bias="0.8" />

            <TextView
                android:id="@+id/txt_main_sct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCT DETAILS"
                android:textColor="@color/colorBlack"
                android:textSize="35sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_month_year_sct"
                app:layout_constraintVertical_bias="0.06" />

            <View
                android:id="@+id/view6_sct"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_line"
                app:layout_constraintEnd_toEndOf="@+id/txt_main_sct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_main_sct" />


            <View
                android:id="@+id/sct_pass_entry_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:background="@drawable/blue_boder"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/sct_pass_list_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view6_sct" />

            <View
                android:id="@+id/sct_pass_list_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:background="@drawable/oragne_boder"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/sct_pass_monthly_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sct_pass_entry_view" />

            <View
                android:id="@+id/sct_pass_monthly_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:background="@drawable/voliet_boder"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sct_pass_list_view" />

            <TextView
                android:id="@+id/sct_pass_entry_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCT Entry"
                android:textColor="@color/coloWhite"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_entry_view"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_entry_view"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/sct_pass_entry_view"
                app:layout_constraintTop_toTopOf="@id/sct_pass_entry_view"
                app:layout_constraintVertical_bias="0.15" />


            <View
                android:id="@+id/sct_ic_entry_line"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_line"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_entry_view"
                app:layout_constraintStart_toStartOf="@id/sct_pass_entry_view"
                app:layout_constraintTop_toBottomOf="@id/sct_pass_entry_txt" />

            <View
                android:id="@+id/sct_lottie_pass_entry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_undraw_memory_storage_reh0"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/sct_pass_entry_view"
                app:layout_constraintStart_toStartOf="@+id/sct_pass_entry_txt"
                app:layout_constraintTop_toBottomOf="@id/sct_pass_entry_txt" />


            <TextView
                android:id="@+id/sct_sample_pass_entry_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=" Manage Bus Pass Details Daily\nAnd View Old Pass"
                android:textColor="@color/coloWhite"
                android:textSize="10sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/sct_lottie_pass_entry"
                app:layout_constraintEnd_toEndOf="@+id/sct_rigth_arrow"
                app:layout_constraintStart_toEndOf="@id/sct_lottie_pass_entry"
                app:layout_constraintTop_toTopOf="@id/sct_lottie_pass_entry" />


            <View
                android:id="@+id/sct_rigth_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_entry_txt"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_entry_view"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@id/sct_pass_entry_txt"
                app:layout_constraintTop_toTopOf="@id/sct_pass_entry_txt" />


            <TextView
                android:id="@+id/sct_pass_list_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SCT Daily Report"
                android:textColor="@color/coloWhite"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_list_view"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_list_view"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/sct_pass_list_view"
                app:layout_constraintTop_toTopOf="@id/sct_pass_list_view"
                app:layout_constraintVertical_bias="0.15" />


            <View
                android:id="@+id/sct_rigth_liest_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_list_txt"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_list_view"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@id/sct_pass_list_txt"
                app:layout_constraintTop_toTopOf="@id/sct_pass_list_txt" />


            <View
                android:id="@+id/sct_lottie_list_entry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_undraw_date_picker_gorr"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_list_view"
                app:layout_constraintTop_toBottomOf="@id/sct_ic_list_line" />


            <TextView
                android:id="@+id/sct_sample_pass_list_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text=" Manage Bus Pass Details Daily \n And View Old Pass"
                android:textColor="@color/coloWhite"
                android:textSize="10sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/sct_lottie_list_entry"
                app:layout_constraintEnd_toStartOf="@id/sct_lottie_list_entry"
                app:layout_constraintStart_toStartOf="@+id/sct_pass_list_txt"
                app:layout_constraintTop_toTopOf="@id/sct_lottie_list_entry" />


            <View
                android:id="@+id/sct_ic_list_line"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_line"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_list_view"
                app:layout_constraintStart_toStartOf="@id/sct_pass_list_view"
                app:layout_constraintTop_toBottomOf="@id/sct_pass_list_txt" />

            <TextView
                android:id="@+id/sct_pass_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SCT Monthly Report"
                android:textColor="@color/coloWhite"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_monthly_view"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_monthly_view"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@id/sct_pass_monthly_view"
                app:layout_constraintTop_toTopOf="@id/sct_pass_monthly_view"
                app:layout_constraintVertical_bias="0.15" />


            <View
                android:id="@+id/sct_rigth_month_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="@id/sct_pass_month_txt"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_monthly_view"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@id/sct_pass_month_txt"
                app:layout_constraintTop_toTopOf="@id/sct_pass_month_txt" />

            <View
                android:id="@+id/sct_ic_month_line"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_line"
                app:layout_constraintEnd_toEndOf="@id/sct_pass_monthly_view"
                app:layout_constraintStart_toStartOf="@id/sct_pass_monthly_view"
                app:layout_constraintTop_toBottomOf="@id/sct_pass_month_txt" />

            <View
                android:id="@+id/sct_lottie_month_entry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_undraw_mobile_posts_tlwg"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/sct_pass_month_txt"
                app:layout_constraintTop_toBottomOf="@id/sct_ic_month_line" />


            <TextView
                android:id="@+id/sct_sample_month_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=" Manage Bus Pass Details Daily\nAnd View Old Pass "
                android:textColor="@color/coloWhite"
                android:textSize="10sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/sct_lottie_month_entry"
                app:layout_constraintEnd_toEndOf="@+id/sct_rigth_month_arrow"
                app:layout_constraintStart_toEndOf="@id/sct_lottie_month_entry"
                app:layout_constraintTop_toTopOf="@id/sct_lottie_month_entry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>