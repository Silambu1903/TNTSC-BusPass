<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/dashboard_fragment_xml_root_layout_scene">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />

        <View
            android:id="@+id/viewDash"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/main_boder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </View>

        <View
            android:id="@+id/dashboard_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_dashboard__1_"
            app:layout_constraintBottom_toBottomOf="@id/viewDash"
            app:layout_constraintEnd_toEndOf="@id/viewDash"
            app:layout_constraintStart_toStartOf="@id/viewDash"
            app:layout_constraintTop_toTopOf="@id/viewDash"
            app:layout_constraintVertical_bias="0.05" />

        <View
            android:id="@+id/icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/boder_dashboard_icon"
            app:layout_constraintBottom_toTopOf="@id/setting_icon"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toBottomOf="@id/dashboard_icon"
            app:layout_constraintVertical_bias="0.15" />

        <View
            android:id="@+id/icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_dashboard_icon"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toBottomOf="@id/icon_1" />

        <View
            android:id="@+id/icon_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_dashboard_icon"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toBottomOf="@id/icon_2" />

        <View
            android:id="@+id/icon_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_dashboard_icon"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toBottomOf="@id/icon_3" />

        <View
            android:id="@+id/icon_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_dashboard_icon"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toBottomOf="@id/icon_4" />

        <View
            android:id="@+id/setting_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_settings__1_"
            app:layout_constraintBottom_toBottomOf="@id/viewDash"
            app:layout_constraintEnd_toEndOf="@id/dashboard_icon"
            app:layout_constraintStart_toStartOf="@id/dashboard_icon"
            app:layout_constraintTop_toTopOf="@id/viewDash"
            app:layout_constraintVertical_bias="0.96" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_1"
            app:layout_constraintEnd_toEndOf="@+id/icon_1"
            app:layout_constraintStart_toStartOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_1" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="P"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_2"
            app:layout_constraintEnd_toEndOf="@+id/icon_2"
            app:layout_constraintStart_toStartOf="@+id/icon_2"
            app:layout_constraintTop_toTopOf="@+id/icon_2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_3"
            app:layout_constraintEnd_toEndOf="@+id/icon_3"
            app:layout_constraintStart_toStartOf="@+id/icon_3"
            app:layout_constraintTop_toTopOf="@+id/icon_3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_4"
            app:layout_constraintEnd_toEndOf="@+id/icon_4"
            app:layout_constraintStart_toStartOf="@+id/icon_4"
            app:layout_constraintTop_toTopOf="@+id/icon_4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="R"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_5"
            app:layout_constraintEnd_toEndOf="@+id/icon_5"
            app:layout_constraintStart_toStartOf="@+id/icon_5"
            app:layout_constraintTop_toTopOf="@+id/icon_5" />


        <View
            android:id="@+id/view2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ic_group_22"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/icon_1"
            app:layout_constraintStart_toEndOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_1" />

        <View
            android:id="@+id/view"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ic_group_22"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_2"
            app:layout_constraintStart_toEndOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_2" />


        <View
            android:id="@+id/view3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ic_group_22"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_3"
            app:layout_constraintStart_toEndOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_3" />

        <View
            android:id="@+id/view4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ic_group_22"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_4"
            app:layout_constraintStart_toEndOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_4" />


        <View
            android:id="@+id/view5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/ic_group_22"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/icon_5"
            app:layout_constraintStart_toEndOf="@+id/icon_1"
            app:layout_constraintTop_toTopOf="@+id/icon_5" />

        <View
            android:id="@+id/ic_swipe"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:background="@drawable/sipw_boder"
            app:layout_constraintBottom_toTopOf="@id/icon_5"
            app:layout_constraintStart_toStartOf="@id/main_frame"
            app:layout_constraintTop_toBottomOf="@id/icon_2" />

        <View
            android:id="@+id/ic_siwpe_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/ic_swipe"
            app:layout_constraintEnd_toEndOf="@id/ic_swipe"
            app:layout_constraintStart_toStartOf="@id/ic_swipe"
            app:layout_constraintTop_toTopOf="@id/ic_swipe"
            app:layout_constraintVertical_bias="0.85" />

        <View
            android:id="@+id/ic_siwpe_icon_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:background="@drawable/ic_left_arrow"
            app:layout_constraintBottom_toBottomOf="@id/ic_swipe"
            app:layout_constraintEnd_toEndOf="@id/ic_swipe"
            app:layout_constraintStart_toStartOf="@id/ic_swipe"
            app:layout_constraintTop_toTopOf="@id/ic_swipe"
            app:layout_constraintVertical_bias="0.85" />

        <TextView
            android:id="@+id/txt_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:padding="15dp"
            android:text="Swipee"
            android:textColor="@color/coloWhite"
            app:layout_constraintBottom_toTopOf="@id/ic_siwpe_icon"
            app:layout_constraintEnd_toEndOf="@id/ic_swipe"
            app:layout_constraintStart_toStartOf="@id/ic_swipe"
            app:layout_constraintTop_toTopOf="@+id/ic_swipe"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/txt_swipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:padding="15dp"
            android:text="Swipe"
            android:visibility="gone"
            android:textColor="@color/coloWhite"
            app:layout_constraintBottom_toTopOf="@id/ic_siwpe_icon_1"
            app:layout_constraintEnd_toEndOf="@id/ic_swipe"
            app:layout_constraintStart_toStartOf="@id/ic_swipe"
            app:layout_constraintTop_toTopOf="@+id/ic_swipe"
            app:layout_constraintVertical_bias="0.7" />



        <View
            android:id="@+id/main_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/colorBlack"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/main_frame"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="@id/main_frame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/txt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Mon"
            android:textColor="#808080"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
            app:layout_constraintEnd_toStartOf="@+id/textViewDate"
            app:layout_constraintTop_toTopOf="@+id/textViewDate"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/txt_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="April 2020"
            android:textColor="#808080"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDate"
            app:layout_constraintEnd_toStartOf="@+id/textViewDate"
            app:layout_constraintTop_toTopOf="@+id/textViewDate"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/txt_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ATTENDANCE"
            android:textColor="@color/colorBlack"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/main_frame"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@id/main_frame"
            app:layout_constraintTop_toBottomOf="@+id/txt_month_year"
            app:layout_constraintVertical_bias="0.06" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_line"
            app:layout_constraintEnd_toEndOf="@+id/txt_main"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/txt_main" />


        <View
            android:id="@+id/pass_entry_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="25dp"
            android:background="@drawable/blue_boder"
            app:layout_constraintBottom_toTopOf="@id/pass_list_view"
            app:layout_constraintEnd_toEndOf="@+id/main_frame"
            app:layout_constraintStart_toEndOf="@+id/ic_swipe"
            app:layout_constraintTop_toBottomOf="@+id/view6"

            />

        <View
            android:id="@+id/pass_list_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="25dp"
            android:background="@drawable/oragne_boder"
            app:layout_constraintBottom_toTopOf="@id/pass_monthly_view"
            app:layout_constraintEnd_toEndOf="@+id/main_frame"
            app:layout_constraintStart_toEndOf="@+id/ic_swipe"
            app:layout_constraintTop_toBottomOf="@+id/pass_entry_view"

            />


        <View
            android:id="@+id/pass_monthly_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="25dp"
            android:background="@drawable/voliet_boder"
            app:layout_constraintBottom_toBottomOf="@id/main_frame"
            app:layout_constraintEnd_toEndOf="@+id/main_frame"
            app:layout_constraintStart_toEndOf="@+id/ic_swipe"
            app:layout_constraintTop_toBottomOf="@+id/pass_list_view" />

        <TextView
            android:id="@+id/pass_entry_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passentry"
            android:textColor="@color/coloWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/pass_entry_view"
            app:layout_constraintEnd_toEndOf="@id/pass_entry_view"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@id/pass_entry_view"
            app:layout_constraintTop_toTopOf="@id/pass_entry_view"
            app:layout_constraintVertical_bias="0.15" />


        <View
            android:id="@+id/rigth_arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/pass_entry_txt"
            app:layout_constraintEnd_toEndOf="@id/pass_entry_view"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@id/pass_entry_txt"
            app:layout_constraintTop_toTopOf="@id/pass_entry_txt" />

    </androidx.constraintlayout.motion.widget.MotionLayout>


</layout>